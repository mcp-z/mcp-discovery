{
  "name": "@mcp-z/mcp-discovery",
  "version": "0.0.0",
  "description": "Zero-configuration service discovery for MCP servers via mDNS. Supports HTTP and WebSocket transports.",
  "author": "Kevin Malakoff <kmalakoff.info@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcp-z/mcp-discovery.git"
  },
  "bugs": {
    "url": "https://github.com/mcp-z/mcp-discovery/issues"
  },
  "homepage": "https://github.com/mcp-z/mcp-discovery#readme",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./transports/websocket-server.js": {
      "import": "./dist/esm/transports/websocket-server.js",
      "require": "./dist/cjs/transports/websocket-server.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "typecheck": "tsc -p . --noEmit && echo \"✅ Typecheck passed\" || echo \"❌ Typecheck failed\"",
    "build": "npm run typecheck && tsds build",
    "format": "biome check --write --unsafe",
    "lint": "biome check",
    "test": "node --test 'test/**/*.test.ts'",
    "test:engines": "nvu engines tsds test:node --no-timeouts",
    "prepublishOnly": "npm run build",
    "version": "tsds version"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "discovery",
    "service-discovery",
    "bonjour",
    "mdns",
    "dns-sd",
    "zeroconf"
  ],
  "dependencies": {
    "bonjour-service": "^1.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.0",
    "@types/ws": "^8.18.1",
    "express": "^5.1.0",
    "ts-dev-stack": "^1.18.8",
    "typescript": "^5.9.3",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=24"
  },
  "tsds": {
    "source": "src/index.ts"
  },
  "depcheck": {
    "ignores": [
      "@biomejs/biome",
      "ts-dev-stack",
      "typescript"
    ]
  }
}
