{
  "name": "@mcpeasy/mcp-discovery",
  "version": "0.1.6",
  "description": "Zero-configuration service discovery for MCP servers via mDNS. Supports HTTP and WebSocket transports.",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "discovery",
    "service-discovery",
    "bonjour",
    "mdns",
    "dns-sd",
    "zeroconf",
    "http",
    "websocket",
    "ai",
    "claude"
  ],
  "homepage": "https://github.com/mcp-z/mcp-discovery#readme",
  "bugs": {
    "url": "https://github.com/mcp-z/mcp-discovery/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcp-z/mcp-discovery.git"
  },
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff.info@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./transports/websocket-server.js": {
      "import": "./dist/esm/transports/websocket-server.js",
      "require": "./dist/cjs/transports/websocket-server.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p . --noEmit && tsds build",
    "format": "biome check --write --unsafe",
    "lint": "biome check",
    "prepublishOnly": "tsds validate",
    "test": "tsds test:node --no-timeouts 'test/**/*.test.ts'",
    "test:engines": "nvu engines tsds test:node --no-timeouts 'test/**/*.test.ts'",
    "verify": "package-verify",
    "version": "tsds version"
  },
  "dependencies": {
    "bonjour-service": "^1.3.0",
    "get-port": "^7.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@mcpeasy/package-verify": "^1.1.7",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@types/mocha": "*",
    "@types/node": "^24.10.0",
    "@types/ws": "^8.18.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  },
  "depcheck": {
    "ignores": [
      "@biomejs/biome",
      "@mcpeasy/package-verify",
      "ts-dev-stack",
      "typescript"
    ]
  },
  "tsds": {
    "source": "src/index.ts"
  }
}
